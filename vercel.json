{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/claude",
      "destination": "/api/claude.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
